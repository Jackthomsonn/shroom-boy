{
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "es6": tru,
  },

  "ecmaFeatures": {
    "sourceType": "module"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "no-extra-semi": 2,
    "no-inner-declarations": 2,
    "curly": 2,
    "no-eval": 0,
    "no-extend-native": 2,
    "no-new-wrappers": 2,
    "no-with": 2,
    "strict": 0,
    "no-console": 2,
    "no-undef": 2,
    "array-bracket-spacing": [2, "never"],
    "indent": [2, 2],
    "no-array-constructor": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-new-object": 2,
    "object-curly-spacing": [2, "never"],
    "semi": 2,
    "prefer-const": 2
  },
}